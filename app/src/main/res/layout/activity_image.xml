<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_top"
            android:layout_marginLeft="10dp"
            android:text="ImageView的展示样式："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinnerScaleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/scale_type"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_first"
        android:layout_below="@id/layout_top"
        android:text="图片: 50*50，背景：200*100"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_first"
        android:layout_below="@id/tv_first"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/sample"
        android:background="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/tv_second"
        android:layout_below="@id/iv_first"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="图片: 50*50，背景：40*20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv_second"
        android:layout_below="@id/tv_second"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/sample"
        android:background="@drawable/ic_launcher_background"
        />

</RelativeLayout>
